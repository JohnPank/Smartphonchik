<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
            android:text="" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/ivKolobok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/kolobok" />

        <ImageView
            android:id="@+id/ivRyaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/ryaba" />

        <ImageView
            android:id="@+id/ivRepka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/repka" />

        <ImageView
            android:id="@+id/ivTeremok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/teremok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/ivZainka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_zainka" />

        <ImageView
            android:id="@+id/ivScomoroh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_skomoroh" />

        <ImageView
            android:id="@+id/ivKotenok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_kotenok" />

        <ImageView
            android:id="@+id/ivPetushok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_petushok" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivKolibelnaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_kolibelnaya" />

        <ImageView
            android:id="@+id/ivBelochka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_belochka" />

        <ImageView
            android:id="@+id/ivKasha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_kasha" />

        <ImageView
            android:id="@+id/ivGusi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_gusi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivKaravai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_karavay" />

        <ImageView
            android:id="@+id/ivKoza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_koza" />

        <ImageView
            android:id="@+id/ivKot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_kot" />

        <ImageView
            android:id="@+id/ivAntoshka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_antoshka" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMedved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_medved" />

        <ImageView
            android:id="@+id/ivVodichka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_vodichka" />

        <ImageView
            android:id="@+id/ivSoroka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_soroka" />

        <ImageView
            android:id="@+id/ivKozlenok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="playSong"
            app:srcCompat="@drawable/p_kozlenok" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <ImageView
            android:id="@+id/ivVolDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="setVolume"
            app:srcCompat="@drawable/volume_down" />

        <ImageView
            android:id="@+id/ivOnOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorBackground"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="onOff"
            app:srcCompat="@drawable/on_off" />

        <ImageView
            android:id="@+id/ivVolUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="setVolume"
            app:srcCompat="@drawable/volume_up" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>


</LinearLayout>
